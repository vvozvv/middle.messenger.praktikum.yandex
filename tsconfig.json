{
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonjs",
    },
  },
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "target": "es5",
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noEmit": false,
    "strict": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "isolatedModules": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "typeRoots": [ "src/core/types", "./node_modules/@types"],
    "paths": {
      "components/*": ["./components/*"]
    }
  }
}
